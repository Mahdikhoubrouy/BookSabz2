@page
@model BookSabz.Presentation.WebRazor.Pages.Admin.BookCategoryListModel
@{
    Layout = "_AdminLayout";
    ViewData["AdminTitle"] = "لیست کتگوری ها";
}




@section Styles{
                <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

<div class="container">
<div class="row header" style="text-align:center;color:green">
<h3>کتگوری ها</h3>
</div>

<table id="BookTable" class="table table-striped table-bordered" style="width:100%">
<thead>
<tr>
    <th>ID</th>
    <th>Name</th>
    <th>Creation Date</th>>
    <th>Actions</th>
</tr>
</thead>
<tbody>

            @foreach (var book in Model.Categories)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.CreationDate</td>


                        <td>

                        @if (book.IsDeleted == true)
                        {

                        <a asp-page="./BookCategoryList" asp-page-handler="Restore" asp-route-id="@book.Id"><i class="fas fa-trash-restore"></i></a>
                        }
                        else
                        {
                            <a asp-page="./BookCategoryList" asp-page-handler="Delete" asp-route-id="@book.Id"> <i class="fas fa-trash"></i></a>
                        }

                                    <a asp-page="./EditBookCategory"  asp-route-id="@book.Id"><i class="fas fa-edit"></i></a>
                            </td>
               </tr>
            }

</tbody>
</table>
</div>


@section Scripts{
                        <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
                        <script src="~/js/table.js"></script>
}